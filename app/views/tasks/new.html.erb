<h1>タスク新規作成</1>

<div class="row">
<div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">


<%= form_for(@task) do |f| %>
<div class="form-group">
<%= f.label :content, 'タスク' %>
<%= f.text_field :content, class:'form-control' %>
</div>

<div class="form-group">
<%= f.label :status, '状況' %>
<%= f.text_field :status, class:'form-control' %>
</div>


<%= f.submit '作成' %>

<% end %>

</div>
</div>

<%= link_to '一覧に戻る',tasks_path %>
